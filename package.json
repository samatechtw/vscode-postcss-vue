{
	"name": "postcss-vue",
	"displayName": "postcss-vue",
	"description": "VSCode syntax highlighting, code completion, and error checking in Vue SFCs with Postcss",
	"publisher": "SamaTech",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samatech/vscode-postcss-vue.git"
  },
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "js-yaml syntaxes/postcss-vue2.yaml > syntaxes/postcss-vue2.json && tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"contributes": {
		"languages": [
			{
				"id": "postcss",
				"configuration": "./language-configuration.json",
				"aliases": [
					"PostCSS",
					"postcss"
				],
				"extensions": [
					".css",
					".pcss",
					".postcss"
				],
				"mimetypes": [
					"text/css",
					"text/x-pcss",
					"text/pcss"
				]
			}
		],
		"grammars": [
			{
				"scopeName": "source.postcss",
				"path": "./syntaxes/css.tmLanguage.json",
				"language": "postcss"
			},
			{
				"scopeName": "source.vue.postcss",
				"path": "./syntaxes/postcss-vue2.json",
				"injectTo": [
					"source.vue",
					"source.postcss"
				]
			}
		]
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.6.1",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.29.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.0.3",
		"typescript": "^4.3.5",
		"vsce": "^1.96.1",
		"vscode-test": "^1.6.1"
	}
}
